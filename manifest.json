{

// http://stackoverflow.com/questions/11661613/chrome-devpanel-extension-communicating-with-background-page/11677744#11677744

    "name":"debugPanel",
    "description":"Makes HTTP request",
    "manifest_version":2,
    "version":"1.0",
    "minimum_chrome_version": "10.0",

    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },

    "browser_action":{
        "default_icon":"images/icon.png",
        "default_popup":"html/popup.html"
    },

    "devtools_page":"html/devtools.html",
    //    "devtools_page": "html/panel.html"
    "background":{
        "scripts":[
            "js/background.js",
            "js/churl.js"
        ]
    },
    "permissions":[
        "tabs",
        "<all_urls>"
    ]
    ,


    "content_scripts": [
        {
            "matches": ["*://*/*"],
            "js": [
                "js/churl.js",
                "js/content.js"
            ],
            "run_at": "document_start"
        }
    ]

//    , "options_page": "html/panel.html"

}
